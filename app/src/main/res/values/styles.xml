<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_grey_900</item>
        <item name="colorPrimaryDark">@color/md_grey_900</item>
        <item name="colorAccent">@color/md_blue_400</item>
        <item name= "android:listDivider">@drawable/divider</item >
    </style>

    <!-- Base application theme with action bar. -->
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_grey_900</item>
        <item name="colorPrimaryDark">@color/md_grey_900</item>
        <item name="colorAccent">@color/md_blue_400</item>
    </style>

    <!-- Baby Edition application theme. -->
    <style name="BabyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_red_600</item>
        <item name="colorPrimaryDark">@color/md_red_600</item>
        <item name="colorAccent">@color/md_blue_400</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--标题和图标-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--置于下方-->
        <item name="overlapAnchor">false</item>
        <!--左边箭头-->
        <item name="drawerArrowStyle">@style/Drawer_Arrow_Style</item>
        <!--溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/Overflow_Menu_Text_style</item>
    </style>

    <!--左边的箭头指示-->
    <style name="Drawer_Arrow_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!--溢出菜单文字样式-->
    <style name="Overflow_Menu_Text_style" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Toolbar.MyStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

</resources>
